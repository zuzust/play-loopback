{
  "name": "play-loopback",
  "version": "1.0.0",
  "main": "server/server.js",
  "engines": {
    "node": ">=4"
  },
  "now": {
    "name": "play-loopback",
    "alias": [
      "play-loopback"
    ],
    "env": {
      "MONGODB_URL": "@mongodb-url",
      "NODE_ENV": "production"
    }
  },
  "scripts": {
    "dev": "nodemon server/server.js --watch common --watch server",
    "lint": "eslint .",
    "start": "node .",
    "test": "NODE_ENV=test mocha test/**/*.test.js",
    "test:watch": "npm run test -- --watch",
    "posttest": "echo npm run lint && nsp check",
    "now:deploy": "now --public",
    "now:alias": "now alias",
    "now": "npm run now:deploy && npm run now:alias"
  },
  "dependencies": {
    "compression": "^1.0.3",
    "cors": "^2.5.2",
    "helmet": "^1.3.0",
    "loopback": "^3.0.0",
    "loopback-boot": "^2.6.5",
    "loopback-component-explorer": "^4.0.0",
    "loopback-connector-mongodb": "3.2.1",
    "serve-favicon": "^2.0.1",
    "strong-error-handler": "^2.0.0"
  },
  "devDependencies": {
    "chai": "4.1.1",
    "eslint": "^3.17.1",
    "eslint-config-loopback": "^8.0.0",
    "mocha": "3.5.0",
    "nodemon": "1.11.0",
    "nsp": "^2.1.0",
    "supertest": "3.0.0"
  },
  "repository": {
    "type": "",
    "url": ""
  },
  "license": "UNLICENSED",
  "description": "play-loopback"
}
